/* pages/xiecheng/login/login.wxss */
.login-content {
  width: 100%;
  height: 100%;
  background: linear-gradient(0deg, #395ecb 0%, #2657be 35%, #242161 85%, #1a0531 100%)
}
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 15%;
}
.header image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.header text {
  margin-top: 10rpx;
  color: #fff;
}
.body {
  padding-top: 15%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.body view {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.body input {
  width: 75%;
  background-color: rgba(0, 0, 0, 0.32);
  margin-top: 30rpx;
  border-radius: 70rpx;
  padding-left: 130rpx;
  height: 70rpx;
  font-size: 30rpx;
  color: #fff;
}
.body image {
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  top: 38rpx;
  left: 9%;
  border-right: 2rpx solid #fff;
  padding-right: 15rpx;

}
.p-style {
  color: gray
}
.footer {
  padding-top: 17%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.footer .login {
  background: #0c75de;
  border-radius: 70rpx;
  color: #fff;
  width: 91%;
  font-size: 36rpx;

}
.footer .register {
  background: initial;
  font-size: 36rpx;
  color: #fff;
}