/* pages/xiecheng/index/index.wxss */
.row {
  display: flex;
  /* flex-direction: column; */
  /* background-color: #fb5265; */
  height: 200rpx;
  color: #fff;
  margin-bottom: 10rpx;
}
.left {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-bottom: 2rpx #fff solid;
}
.left-img {
  width: 79rpx;
  height: 75rpx;
  margin-top: 20rpx;
}
.right {
  flex: 2;
  height: 100%;
}
.right-t, .right-b {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
}
.right-t view, .right-b view {
  flex: 1;
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
  border-left: 1rpx #fff solid;
  border-bottom: 2rpx #fff solid;
}